@page
@model MyWebApp.Pages.EquipmentsModel

@{
    ViewData["Title"] = "Оборудование";
}

<h1>Оборудование</h1>

<p>
    <a asp-page="AddEditEquipment" class="btn btn-primary">Добавить устройство</a>
</p>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Векторный поиск..." />
        <button type="submit" class="btn btn-outline-secondary">Поиск</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Модель</th>
            <th>Серийный номер</th>
            <th>Тип</th>
            <th>Наличие</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipment) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ModelName)</td>
            <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Type)</td>
            <td>
                @if (item.IsInStock)
                {
                    <span class="badge bg-success">В наличии</span>
                }
                else
                {
                    <span class="badge bg-danger">Нет</span>
                }
            </td>
            <td>
                <a asp-page="./AddEditEquipment" asp-route-id="@item.Id">Редактировать</a>
            </td>
        </tr>
}
    </tbody>
</table>