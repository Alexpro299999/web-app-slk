@page "{id:int}"
@model MyWebApp.Pages.Dynamic.DataModel
@{
    ViewData["Title"] = "Данные: " + Model.Table?.Name;
}

<div class="d-flex justify-content-between align-items-center">
    <h2>@Model.Table?.Name (Данные)</h2>
    <a asp-page="./AddRow" asp-route-id="@Model.Table?.Id" class="btn btn-primary">Добавить запись</a>
</div>
<a asp-page="./Index">Назад к таблицам</a>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive mt-3">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                @if (Model.Table != null)
                {
                    foreach (var col in Model.Table.Columns)
                    {
                        <th>@col.Name</th>
                    }
                }
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Rows)
            {
                <tr>
                    @if (Model.Table != null)
                    {
                        foreach (var col in Model.Table.Columns)
                        {
                            <td>
                                @if (row.ContainsKey(col.Name))
                                {
                                    if (col.DataType == "file" && !string.IsNullOrEmpty(row[col.Name]))
                                    {
                                        <a href="@row[col.Name]" target="_blank">Скачать</a>
                                    }
                                    else
                                    {
                                        @row[col.Name]
                                    }
                                }
                            </td>
                        }
                    }
                    <td style="width: 150px;">
                        <a asp-page="./EditRow" asp-route-tableId="@Model.Table?.Id" asp-route-rowId="@row["_Id"]" class="btn btn-sm btn-warning">Изм.</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Table?.Id" asp-route-rowId="@row["_Id"]" style="display:inline;" onsubmit="return confirm('Удалить эту запись?');">
                            <button class="btn btn-sm btn-danger">X</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>